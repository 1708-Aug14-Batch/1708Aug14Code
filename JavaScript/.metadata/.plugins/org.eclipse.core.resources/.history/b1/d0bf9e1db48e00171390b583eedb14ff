<!DOCTYPE html>
<html>
<head>
<meta charset="ISO-8859-1">
<title>Simple Calculator</title>

<link rel="stylesheet"
	href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/css/bootstrap.min.css"
	integrity="sha384-/Y6pD6FV/Vv2HJnA6t+vslU6fwYXjCFtcEpHbNJ0lyAFsXTsjBbfaDjzALeQsN6M"
	crossorigin="anonymous">
</head>
<body>

	<div class="container">
		<div class="row">

			<input type="text" id="input1" class="input" placeholder="Enter x" />
			<input type="text" id="input2" class="input" placeholder="Enter y" />
		</div>
		<div class="row">
			<input type="text" id="output" class="output" disabled
				placeholder="Result goes here" style="background-color: Silver" />
		</div>
		<div class="row">

			<button id="add" class="btn btn-primary">+</button>
			<button id="sub" class="btn btn-primary">-</button>
			<button id="mul" class="btn btn-primary">*</button>
			<button id="div" class="btn btn-primary">/</button>
			<button id="mod" class="btn btn-primary">%</button>
		</div>
		<div class="row justify-content-md-center">
			<button id="pow" class="btn btn-primary">x^y</button>
			<button id="sin" class="btn btn-primary">sine(x)</button>
			<button id="cos" class="btn btn-primary">cos(x)</button>
			<button id="ln" class="btn btn-primary">ln(x)</button>
			<button id="sqrt" class="btn btn-primary">sqrt(x)</button>
		</div>
	</div>

	<script src="https://code.jquery.com/jquery-3.2.1.js"
		integrity="sha256-DZAnKJ/6XZ9si04Hgrsxu/8s717jcIzLy3oi35EouyE="
		crossorigin="anonymous"></script>


	<script>
		$('#add').on('click', function() {
			var first = parseFloat($('#input1').val());
			var second = parseFloat($('#input2').val());
			$('#output').val(first + second);
		});
		$('#sub').on('click', function() {
			var first = parseFloat($('#input1').val());
			var second = parseFloat($('#input2').val());
			$('#output').val(first - second);
		});
		$('#mul').on('click', function() {
			var first = parseFloat($('#input1').val());
			var second = parseFloat($('#input2').val());
			$('#output').val(first * second);
		});
		$('#div').on('click', function() {
			var first = parseFloat($('#input1').val());
			var second = parseFloat($('#input2').val());
			$('#output').val(first / second);
		});
		$('#mod').on('click', function() {
			var first = parseFloat($('#input1').val());
			var second = parseFloat($('#input2').val());
			$('#output').val(first % second);
		});
		$('#pow').on('click', function() {
			var first = parseFloat($('#input1').val());
			var second = parseFloat($('#input2').val());
			$('#output').val(Math.pow(first, second));
		});
		$('#sin').on('click', function() {
			var first = parseFloat($('#input1').val());
			var second = parseFloat($('#input2').val());
			$('#output').val(Math.sin(first));
		});
		$('#cos').on('click', function() {
			var first = parseFloat($('#input1').val());
			var second = parseFloat($('#input2').val());
			$('#output').val(Math.cos(first));
		});
		$('#ln').on('click', function() {
			var first = parseFloat($('#input1').val());
			var second = parseFloat($('#input2').val());
			$('#output').val(Math.log(first));
		});
		$('#sqrt').on('click', function() {
			var first = parseFloat($('#input1').val());
			var second = parseFloat($('#input2').val());
			$('#output').val(Math.sqrt(first));
		});
	</script>

	<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
		integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
		crossorigin="anonymous"></script>
	<script
		src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js"
		integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4"
		crossorigin="anonymous"></script>
	<script
		src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/js/bootstrap.min.js"
		integrity="sha384-h0AbiXch4ZDo7tp9hKZ4TsHbi047NrKGLO3SEJAg45jXxnGIfYzk4Si90RDIqNm1"
		crossorigin="anonymous"></script>
</body>
