<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <display-name>ServletExample</display-name>
  
  <servlet>
  	<servlet-name>HelloServlet</servlet-name>
  	<servlet-class>com.revature.servlets.HelloServlet</servlet-class>
  	<!-- <load-on-startup>0</load-on-startup> -->
  	<!-- Applys to this specific servlet -->
  	<!--
  	<init-param>
  		<param-name>NAME</param-name>
  		<param-value>10</param-value>
  	</init-param> -->
  </servlet>
  
  <!-- Applys to any servlet -->
  <!--
  <context-param>
  	<param-name>NAME</param-name>
  	<param-value>10</param-value>
  </context-param>
  -->
  
  <servlet>
  	<servlet-name>ForwardRedirectServlet</servlet-name>
  	<servlet-class>com.revature.servlets.ForwardRedirectServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>HelloServlet</servlet-name>
  	<url-pattern>/hello</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
  	<servlet-name>ForwardRedirectServlet</servlet-name>
  	<url-pattern>/forred</url-pattern>
  </servlet-mapping>
  
</web-app>