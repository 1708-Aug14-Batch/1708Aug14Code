<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="helloWorld" class="com.ex.beans.HelloWorld">
		<!-- <property name="message" value="Hello Spring! This is a message" />
		 -->
		 
		 <constructor-arg ref="java.lang.String" value="testing injection"/>
	</bean>

</beans>

<!-- 
The above is a Bean configuration file, which is an XML file
and acts as a cement that glues the beans, i.e. the classes
together. This file needs to be created under the src/main/resources
directory
 -->