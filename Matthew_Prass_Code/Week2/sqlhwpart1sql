--All of SQL 2.0 Queries

--select
select * from employee;
select * from employee where lastname = 'King';
select * from employee where employee.firstname = 'Andrew' and employee.reportsto is null;

--order by
select * from album
order by title desc;

select firstname from customer
order by city;

