--select * from example;

create or replace function findPerson
(fn in varchar2)
return number
is
person_id number;

cursor c1 is 
select ex_id
from example
where lower(firstname) = lower(fn);

begin
open c1;
fetch c1 into person_id;

if c1%notfound then
person_id:=-1;
end if;
close c1;
return person_id;
end;
/


create or replace function findName
(pid in number)
return varchar2
is
person_name varchar2(200);

cursor c1 is 
select firstname
from example
where ex_id = pid;

begin
open c1;
fetch c1 into person_name;

if c1%notfound then
person_name:='not found!';
end if;
close c1;
return person_name;
end;
/

insert into example(firstname,lastname)
values('adding','things');
commit;

