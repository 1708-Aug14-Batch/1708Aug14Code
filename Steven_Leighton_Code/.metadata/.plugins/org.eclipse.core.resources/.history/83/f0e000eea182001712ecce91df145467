package Q7;

import java.util.Comparator;

public class EmployeeComparator implements Comparator<Employee> {

	@Override
	public int compare(Employee o1, Employee o2) {
		
		//check for same values, return equal (0)
		if(o1.getAge()==o2.getAge() &&
				o1.getName()==o2.getName() &&
				o1.getDepartment()==o2.getDepartment()) return 0;

		//compares in priority of department, name, then age
		if(o1.getDepartment().compareTo(o2.getDepartment()) == -1) return 1;
		if(o1.getName().compareTo(o2.getName()) == -1) return 1;
		if(o1.getAge() > o2.getAge()) return 1;
			
		//default moves right
		return -1;
	}

}
