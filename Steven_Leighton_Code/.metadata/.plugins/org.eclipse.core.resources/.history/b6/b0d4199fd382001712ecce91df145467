package Q13;

public class PrintChallenge {

	public static void main(String[] args) {
		for(int i = 1; i <= 4; i++){
			for(int j = 1; j <= i; j++){
				if(isEven(i) && isEven(j)){
					System.out.print(1);
				}
				else if(!isEven(i) && !isEven(j)){
					System.out.print(1);
				}
				else{
					System.out.print(0);
				}
			}
			System.out.println("");
		}
		
		
	}
	static boolean isEven(int x){
		//true if x%2 is 0, false otherwise
		return x%2 == 0 ? true : false; 
	}
}
