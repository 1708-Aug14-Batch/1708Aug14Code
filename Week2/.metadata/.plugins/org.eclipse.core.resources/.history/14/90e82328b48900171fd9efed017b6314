package com.bank.util;

import java.io.FileReader;




public class ConnectionFacory {
	private static ConnectionFactory cf = null;
	private static Boolean build = true;
	
	
	private ConnectionFactory(){
		build = false;
	}
	
	public static synchronized ConnectionFactory getInstance(){
		if(build == true){
			cf = new ConnectionFactory();	
		}
		return cf;		
	}
	
	public Connection getConnection(){
		
		Connection conn = null;
		try{
			Properties prop = new Properties();
			prop.load(new FileReader("C:/Users/jathm/my_git_repos/1708Aug14Code/Week2/HelloJDBCIntro/src/com/bank/util/database.properties"));
			Class.forName(prop.getProperty("driver"));
			conn = DriverManager.getConnection(prop.getProperty("url"), prop.getProperty("usr"), prop.getProperty("pwd"));
		}
		catch (Exception e){
			e.printStackTrace();
		}
		return conn;
		
	}

}

}
