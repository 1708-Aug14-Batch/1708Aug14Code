package com.revature.dao;



import org.hibernate.Session;
import org.hibernate.Transaction;

import com.revature.beans.Instructor;
import com.revature.beans.Student;
import com.revature.beans.Transcript;
import com.revature.util.ConnectionUtil;

public class HibernateDAO {
	
	/*
	 * Persists the student to the database
	 * An ID is generated for the student and the student with all the corresponding
	 * persisted info is returned
	 */
	public Student addStudent(Student student) {
		Session session = ConnectionUtil.getSession();
		Transaction transaction = session.beginTransaction();
		
		Transcript transcript = (Transcript) session.save(transcript);
		
		student.setTranscript(transcript);
		
		student = (Student) session.save(student);
		try {
			transaction.commit();
		} catch (Exception ex) {
			System.out.println(ex.getMessage());
			System.out.println(ex.getStackTrace());
		}
		session.close();
		
		return student;
	}
	
	public void addInstructor(Instructor instructor) {
		Session session = ConnectionUtil.getSession();
		
		Transaction transaction = session.beginTransaction();
		
		session.save(instructor);
		
		try {
			transaction.commit();
		} catch (Exception ex) {
			System.out.println(ex.getMessage());
			System.out.println(ex.getStackTrace());
		}
		session.close();
	}
	
}
