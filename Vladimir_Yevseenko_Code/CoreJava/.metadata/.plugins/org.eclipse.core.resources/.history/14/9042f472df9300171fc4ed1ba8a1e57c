package com.revature.servlets;

import java.awt.List;
import java.io.IOException;
import java.util.ArrayList;
import java.util.Map;
import java.util.Set;

import javax.servlet.ServletException;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import com.fasterxml.jackson.databind.ObjectMapper;

public class LoginServlet extends HttpServlet {
	private static final long serialVersionUID = 5901784448217028279L;

	
	@Override
	protected void doPost(HttpServletRequest req, HttpServletResponse resp) throws ServletException, IOException {
		System.out.println("testing POST");
		
		Map<String, String[]> paramMap = req.getParameterMap();
		
		Set<String> paramNames = paramMap.keySet();
		
		ObjectMapper om = new ObjectMapper();
		
		Object obj = paramNames.toArray();
		
		ArrayList<String> tx = om.readValue((String)obj, ArrayList.class);
		
	}
}
