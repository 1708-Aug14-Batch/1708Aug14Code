package com.bank.dao;

import java.io.BufferedReader;
import java.io.BufferedWriter;
import java.io.FileReader;
import java.io.FileWriter;
import java.io.IOException;
import java.util.ArrayList;
import java.util.List;

import com.bank.pojos.Storeable;

public class DAOTextFile<T extends Storeable> implements DAO<T> {
	
	private final String path;
	
	public DAOTextFile(String path) {
		this.path = path;
	}
	
	@Override
	public void save(List<T> list) {
		try (BufferedWriter b = new BufferedWriter(new FileWriter(path))) {
			for (T t: list)
				b.write(t.toString() + "\n");
		} catch (IOException ex) {
			System.out.println("I/O error, try again");
		}
	}

	@Override
	public ArrayList<T> read(String path) {
		try (BufferedReader b = new BufferedReader(new FileReader(path))) {
			List<T> list = new ArrayList<T>;
		} catch (IOException ex) {
			System.out.println("I/O error, try again");
		}
		return null;
	}

}
