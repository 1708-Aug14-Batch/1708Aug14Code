package com.bank.service;

import com.bank.dao.DBDAO;
import com.bank.pojos.Account;
import com.bank.pojos.User;

public class BankService {
	private DBDAO dao;
	private User curUser;
	
	public BankService() {
		dao = new DBDAO();
	}
	
	public boolean createNewUser(String fn, String ln, String e, String pw) {
		return dao.createNewUser(new User(fn, ln, e, pw));
	}
	
	public boolean attemptLogin(String email, String pw) {
		return (user = dao.attemptLogin(email, pw)) != null;
	}
	
	public boolean createNewAccount(Account acc) {
		return dao.createNewAccount(acc);
	}
	
	public boolean updateUserInfo(User user) {
		return dao.updateUserInfo(user);
	}
}
