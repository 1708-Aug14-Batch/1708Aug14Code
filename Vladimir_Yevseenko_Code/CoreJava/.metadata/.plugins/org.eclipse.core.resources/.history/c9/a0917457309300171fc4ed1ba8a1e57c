/**
 * 
 */

window.onload = function() {
	loadDashBoardView();
};

function loadDashBoardView() {
	displayDashBoardInfo();
}

function displayDashBoardInfo() {
	var xhr = new XMLHttpRequest();
	xhr.onreadystatechange = function() {
		if (xhr.readyState == 4 && xhr.status == 200) {
			console.log(xhr.responseText);
			var dto = JSON.parse(xhr.response);
			var user = dto.user;
			console.log(user);
			document.getElementById("firstName").innerHtml = user.first;
			document.getElementById("lastName").innerHtml = user.last;
			document.getElementyById("email").innerHtml = user.email;
		}
	};
	xhr.open("GET", "getUserInfoServlet", true);
	xhr.send();
}
