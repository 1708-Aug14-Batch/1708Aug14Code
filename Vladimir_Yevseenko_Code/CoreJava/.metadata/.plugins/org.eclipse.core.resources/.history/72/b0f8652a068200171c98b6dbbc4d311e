package com.revature.q8;

import java.util.ArrayList;
import java.util.Arrays;

public class Palindromes {
	public static void main(String[] args) {
		String[] words = {"karan", "madam", "tom", "civic", "radar", "sexes", "jimmy", "kayak", "john",  "refer", "billy", "did"};
		ArrayList<String> list = Arrays.asList({"karan", "madam", "tom", "civic", "radar", "sexes", "jimmy", "kayak", "john",  "refer", "billy", "did"});
	}
	
	public static ArrayList<String> onlyPalindromes(ArrayList<String> list) {
		ArrayList<String> res = new ArrayList<>();
		for (String str: list)
			if (isPalindrome(str))
				res.add(str);
		return res;
	}
	
	public static boolean isPalindrome(String s) {
		for (int low = 0, high = s.length() - 1; low < high; low++, high--)
			if (s.charAt(low) != s.charAt(high))
				return false;
		return true;
	}
}
