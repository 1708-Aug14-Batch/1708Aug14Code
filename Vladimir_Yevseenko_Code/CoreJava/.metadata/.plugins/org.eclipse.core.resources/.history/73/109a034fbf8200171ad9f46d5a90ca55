package com.revature.threads;

import java.util.Calendar;

public class Timer implements Runnable {
	
	int i;
	public Timer(int i) {
		this.i = i;
	}
	
	@Override
	public void run() {
		while (true) {
			System.out.println("Thread " + i);
			try {
				Thread.sleep(500);
			} catch (InterruptedException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
		}
	}
}
