$(function() {
	$.post('employeesServlet',
			{},
			function(arr) {
				let table = $('#employeesTable').DataTable({searching:false});
				for (let i=0; i<arr.length; i++) {
					console.log(arr[i]);
					table.row.add([
					         arr[i].id,
					         arr[i].first,
					         arr[i].last,
					         arr[i].email
					               ]).draw(false);
				}
 			});
});