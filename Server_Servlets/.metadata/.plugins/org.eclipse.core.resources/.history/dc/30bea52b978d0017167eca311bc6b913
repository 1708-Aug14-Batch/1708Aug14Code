package com.reimburse.pojos;

import java.math.BigDecimal;
import java.time.LocalDate;
import java.util.Map;
import java.util.TreeMap;

public class Reimbursement {
	
	public enum reimbursementStatus {
		NULL,		// The database is 1-indexed so I'm throwing out the index 0 element
		PENDING,
		DENIED,
		APPROVED
	};
	
	private final int reimbursementId;
	private final int submitterId;
	private int resolverId;
	private int statusId;
	private final LocalDate submitDate;
	private LocalDate resolvedDate;
	private String description;
	private String resolveNotes;
	
	public Reimbursement(int reimbursementId, int submitterId, int statusId, LocalDate submitDate, String description) {
		super();
		this.reimbursementId = reimbursementId;
		this.submitterId = submitterId;
		this.statusId = statusId;
		this.submitDate = submitDate;
		this.description = description;
	}
	
}
