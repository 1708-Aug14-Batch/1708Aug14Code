 * 
 */

// Do the following thing when the document is ready
$(document).ready(function() {
	document.getElementById("login_button")
			.addEventListener("click", function() {
		var username = document.getElementsById("username_input").value;
		var password = document.getElementsById("password_input").value;
		
		var dto = [username, password];
		
		dto = JSON.stringify(dto);
		
		var xhr = new XMLHttpRequest();
		xhr.onreadystatechange = function() {
			if (xhr.readyState == 4 && xhr.status == 200) {
				
			}
		}
		
		xhr.open("POST", "undefinedServlet", true);
		xhr.send(dto);
	});
});
