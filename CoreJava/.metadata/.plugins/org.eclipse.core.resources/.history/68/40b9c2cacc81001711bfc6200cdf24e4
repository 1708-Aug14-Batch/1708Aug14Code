package Q1;

public class BubbleSort {
	
	public static void bubbleSort (int[] list) {
		int length = list.length;
		for (int i = 0; i < list.length-1; i++) {
			for (int j = 0; j < --length; j++) {
				if (list[j] > list[j+1]) {
					int temp = list[j];
					list[j] = list[j+1];
					list[j+1] = temp;
				}
			}
		}
	}

	public static void main(String[] args) {
		int[] list = { 1, 0, 5, 6, 3, 2, 3, 7, 9, 8, 4 };
		
		for (int i : list) {
			System.out.print(i + ", ");
		}
		
		bubbleSort(list);
		System.out.println();
		
		for (int i : list) {
			System.out.print(i + ", ");
		}
	}
}
