package com.bank.dao;

import java.io.BufferedReader;
import java.io.BufferedWriter;
import java.io.FileNotFoundException;
import java.io.FileReader;
import java.io.FileWriter;
import java.io.IOException;
import java.util.ArrayList;

import com.bank.pojos.User;


public class DAOTextImpl implements DOA{
	
	static String filename = "src/com/bank/data/bank_info.txt";

	@Override
	public void addUser(User a) {
		try(BufferedWriter bw = new BufferedWriter(new FileWriter(filename, true));){
			String str = "";
			str = str.concat("Unique ID = " + a.getId()+ ": ");
			str = str.concat("First Name = " + a.getFirstname() + ": ");
			str = str.concat("Last Name = " + a.getLastname() + ": ");
			str = str.concat("Email = " + a.getEmail() + ": ");
			str = str.concat("Password = " + a.getPassword() + ": ");
			str = str.concat("Balance = " + a.getBalance() + "\n");
			
			bw.write(str);
		}
		catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		
	}
	
