  //  
  
	function getHobbies() {
	  var skills = "";
		//$("select[name='skills'] option:selected").each(function() {  //this only works if select has multiple tag
		$("select[name='skills'] option[selected='selected']").each(function() {
			skills += $(this).text() + " ";	
		});
		console.log(skills);
	}
  
	console.log("4. Hobbies");
	getHobbies();
	
  //5. Custom Attribute
  //Define function getCustomAttribute()
  //Find all elements with "data-customAttr" attribute
  //Print the value of the attribute.
  //Print the element that has the attribute.

  	function getCustomAttribute() {
		$('[data-customAttr]').each(function(index, element) {
			var x;
			var y;
			x = $(this).attr('data-customAttr');
			y = $(this).prop('tagName');
			console.log(x + " : " + y);
		});
	}

  	console.log("5. Custom Attribute");
  	getCustomAttribute();
  
  //6. Sum Event
  //NOTE: Write unobtrusive Javascript
  //Regarding these elements:
  //  	<input id="num1" class="nums" type="text"/>
  //  	<input id="num2" class="nums" type="text"/>
  //  	<h3>Sum: <span id="sum"></span></h3>
  //Define onchange event handler.
  //Add <input> element values.
  //Put the sum in the <span> element.
  //If values cannot be added, put "Cannot add" in the <span> element

  $("document").ready(function() {
	$("#num1").change(function() {
		if($("#num2").val()) {
			var x = parseInt($('#num1').val());
			var y = parseInt($('#num2').val());
			$("#sum").text(x + y);
		} else {
			$("#sum").text("Cannot add");
		}
	});
	$("#num2").change(function() {
		if($("#num1").val()) {
			x = parseInt($('#num1').val());
			y = parseInt($('#num2').val());
			$("#sum").text(x + y);
		} else {
			$("#sum").text("Cannot add");
		}
	});
  });  <!-- End of JavaScript -->
  
  //7. Skills Event
  //NOTE: Write unobtrusive Javascript
  //When user selects a skill, create an alert with a message similar to:
  //  	"Are you sure CSS is one of your skills?"
  //NOTE: no alert should appear when user deselects a skill.
  
 	$("document").ready(function() {
 		var a = $("option[value='java']").text();
 		var b = $("option[value='net']").text();
 		var c = $("option[value='dom']").text();
 		var d = $("option[value='html']").text();
 		var e = $("option[value='css']").text();
 		var f = $("option[value='javascript']").text();
		$("option[value='java']").click(function() {
			alert("Are you sure " + a + " is one of your skills?");  
		});
		$("option[value='net']").click(function() {
			alert("Are you sure " + b + " is one of your skills?");  
		});
		$("option[value='dom']").click(function() {
			alert("Are you sure " + c + " is one of your skills?");  
		});
		$("option[value='html']").click(function() {
			alert("Are you sure " + d + " is one of your skills?");  
		});
		$("option[value='css']").click(function() {
			alert("Are you sure " + e + " is one of your skills?");  
		});
		$("option[value='javascript']").click(function() {
			alert("Are you sure " + f + " is one of your skills?");  
		});
  
  //8. Favorite Color Event
  //NOTE: Write unobtrusive Javascript
  //NOTE: This is regarding the favoriteColor radio buttons.
  //When a user selects a color, create an alert with a message similar to:
  //  	"So you like green more than blue now?"
  //In this example, green is the new value and blue is the old value.
  //Make the background color (of all favoriteColor radio buttons) the newly selected favoriteColor

  	$(function() {
 		var old = "yellow";
  		$('input:radio[name=favoriteColor]').change(function(e) {
  			e.preventDefault();
			switch($(this).val()) {
 	         case 'green':
	             alert("So you like green more than " + old);
	             $(this).css("background-color",'green');
 		         old = "green";
 	             break;
 	         case 'red':
 	             alert("So you like red more than " + old);
 	             $(this).css("background-color",'red');
 		         old = "red";
 	             break;
 	         case 'blue':
 	             alert("So you like blue more than " + old);
 	             $(this).css("background-color",'blue');
 		         old = "blue";
 	             break;
 	         case 'orange':
 	             alert("So you like orange more than " + old);
 	             $(this).css("background-color",'orange');
				 old = "orange";
 	             break;
 	    	}
 		});
    });

 	
 	});  <!-- End of JavaScript -->
  
