package com.bank.dao;

import com.bank.pojos.Account;
import com.bank.pojos.User;

public interface Dao {		
	// Send and receive from data source
	
	/**
	 * Adds a new User to the database
	 * @param user with non-null first name, last name, and email
	 * @param password 
	 * @return USERID created for new User record
	 */
	public int addUser(User user, String password);
	
	/**
	 * Gets the User with matching email and password from the database
	 * @param email
	 * @param password
	 * @return User object containing User information from database
	 */
	public User getUser(String email, String password);
	
	/**
	 * Returns whether a User already exists with a specific email in the database
	 * @param email
	 * @return Whether the email is already in use
	 */
	public boolean hasUser(String email);
	
	/**
	 * Creates a new account from the specified us
	 * @param userId
	 * @param typeId
	 * @return ACCOUNTID created for new Account record
	 */
	public int createAccount(int userId, int typeId);
	public boolean closeAccount(int accountId);

	public float getBalance(int userId, int accountId);
	public boolean withdraw(float amount, int accountId);
	public boolean deposit(float amount, int accountId);
	
	public boolean transferFunds(float amount, int fromAccountId, int toAccountId);
	
	public boolean updateFirstName(int userId, String fName);
	public boolean updateLastName(int userId, String lName);
	public boolean updatePassword(int userId, String password);
}
