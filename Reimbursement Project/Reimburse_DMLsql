--SEQUENCES FOR THE AUTO-GENERATION OF PRIMARY KEYS
--FOR BOTH USERS AND REIMBURSEMENT TABLES
----------------------SEQUENCES------------------
--USER SEQUENCE---
CREATE SEQUENCE users_seq start with 1 increment BY 1;
  --REIMBURSEMENT SEQUENCE---
CREATE SEQUENCE reimburse_seq start with 1 increment BY 1;
  ----------------------TRIGGERS-------------------
  --USERS TRIGGER
CREATE OR REPLACE TRIGGER users_seq_TRIGGER BEFORE
  INSERT ON USERS FOR EACH ROW BEGIN IF :new.userid IS NULL THEN
  SELECT users_seq.NEXTVAL INTO :new.userid FROM DUAL;
END IF;
END;
/
--REIMBURSEMENT TRIGGER
CREATE OR REPLACE TRIGGER reimburse_seq_TRIGGER BEFORE
  INSERT ON REIMBURSEMENTS FOR EACH ROW BEGIN IF :new.reimid IS NULL THEN
  SELECT reimburse_seq.NEXTVAL INTO :new.reimid FROM DUAL;
END IF;
END;
/
--FUNCTIONS AND STORED PROCEDRUES