	public RUser read(String email) {
		// TODO Auto-generated method stub
		return null;
	}

	@Override
	public ArrayList<RUser> readAll() {
		// TODO Auto-generated method stub
		return null;
	}

	@Override
	public void update(RUser user) {
		// TODO Auto-generated method stub

	}

}
