package com.ex.day3;

public class Recursion {
	
	public static void main(String[] args) {
		int num = 1;
		
		System.out.print("Factorial of " + num + " is: ");
		System.out.println(factorial(num));
	}
	
	public static int factorial(int n) {
		if (n == 1) return 1;
		
		return (n * factorial(n-1));
	}

}
