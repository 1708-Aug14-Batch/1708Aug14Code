package com.bank.pojos;

import com.ex.exceptions.InvalidSSNException;

// Uses a single bank account
// Only has access to their own data

public class User extends Person implements Bankable {

	// User is limited to only one account
	private final Account account;
	
	public User(Person person, Account account) throws InvalidSSNException {
		super(person.getSSN(), person.getFirstName(), person.getLastName());
		this.account = account;
	}

