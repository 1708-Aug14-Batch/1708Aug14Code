package question1;

import java.util.ArrayList;

// FIXME add lots of meaningful comments

public class BubbleSortDriver {
	
	// Keeps track of whether two numbers were swapped during a single pass through the array
	private boolean swapped = false;
	
	// A provided input of numbers to be sorted
	private static int[] inputArray = {1,0,5,6,3,2,3,7,9,8,4};
	
	public static void main(String[] args) {
		printArray(inputArray);
	
		int[] outputArray = bubbleSort(inputArray);
		
		printArray(outputArray);
	}
	
	private static int[] bubbleSort(int[] inputArray) {
		return inputArray;	// FIXME method stub
	}
	
	private static void printArray(int[] myArray) {
		
		// Print each character in the array
		for (int i = 0; i < myArray.length; i++) {
			System.out.print(myArray[i]);
			
			// Only print a comma if the list is not finished
			if (i < myArray.length-1)
				System.out.print(", ");
		}
		// Print a newline at the end to make way for anything else printed to the console
		System.out.println();
	}
	
}
