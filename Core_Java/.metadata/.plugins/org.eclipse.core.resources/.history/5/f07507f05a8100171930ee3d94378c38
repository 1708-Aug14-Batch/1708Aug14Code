package fourOOPPrinciples;

public class Lizard extends Animal {

	// Energy ranges from 0 to 100
	protected int energy = 100;
	// Size ranges from 0 to 100
	protected int size;
	protected int numChildren = 0;
	
	Lizard(int size) {
		if (size < 0)
			size = 0;
		else if (size > 100)
			size = 100;
		
		this.size = size;
	}
	
	@Override
	public void move() {
		
		if (energy > 0) {
			energy--;
			System.out.println("The lizard moves");
		} else System.out.println("The lizard is too tired to move");
	}

	@Override
	public void grow() {
		// TODO Auto-generated method stub
		
	}

	@Override
	public void reproduce() {
		numChildren++;
		System.out.println("The lizard now has " + numChildren + " offspring");
	}

	@Override
	protected void eat() {
		// TODO Auto-generated method stub
		
	}

}
