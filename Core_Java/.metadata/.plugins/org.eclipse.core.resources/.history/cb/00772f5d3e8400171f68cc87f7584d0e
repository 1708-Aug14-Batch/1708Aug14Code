	private boolean copyFile(String filename) {
		Scanner scan = null;
		
		try(BufferedWriter bw = new BufferedWriter(
				new FileWriter("Test" + filename, true)))  {
			
			// Read from original file
			scan = new Scanner(new File(filename));
			// Write to new file
			
			
			while (scan.hasNext())
				bw.write(scan.nextLine() + "\n");
		
			bw.close();
			scan.close();
		} catch (FileNotFoundException e) {
			e.printStackTrace();
			return false;
		} catch (IOException e) {
			e.printStackTrace();
			return false;
		} finally {
			scan.close();
		}
		
		return true;
	}

}
