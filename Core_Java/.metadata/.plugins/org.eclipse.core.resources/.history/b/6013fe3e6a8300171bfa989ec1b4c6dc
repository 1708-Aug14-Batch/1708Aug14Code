package com.bank.pojos;

import com.ex.exceptions.InvalidSSNException;

public class Person {
	
	// Each person must have a unique Social Security Number
	private final int SSN;
	
	// Each person must have a firstName and lastName
	private String firstName;
	private String lastName;

	// If a person has an email then it must be unique.
	private String email = "";
	
	public Person(int SSN, String firstName, String lastName) throws InvalidSSNException {
		
		// FIXME check that the provided SSN is unique among all current people
		// otherwise throw an InvalidSSNException
		
		this.SSN = SSN;
		this.firstName = firstName;
		this.lastName = lastName;
	}

	public String getFirstName() {
		return firstName;
	}

	public void setFirstName(String firstName) {
		this.firstName = firstName;
	}

	public String getLastName() {
		return lastName;
	}

	public void setLastName(String lastName) {
		this.lastName = lastName;
	}

	public String getEmail() {
		return email;
	}

	public void setEmail(String email) {
		this.email = email;
	}

	public int getSSN() {
		return SSN;
	}

}
