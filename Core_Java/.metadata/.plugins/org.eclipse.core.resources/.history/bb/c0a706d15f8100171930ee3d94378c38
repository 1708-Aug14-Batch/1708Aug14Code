package question7;

import java.util.ArrayList;
import java.util.Collections;

/*
 * Q7. Sort two employees based on their name, department, and
 * age using the Comparator interface.
 */

public class Driver {
	
	public static void main(String[] args) {
		
		ArrayList<Employee> empList = new ArrayList<Employee>();
		
		empList.add(new Employee("John Doe", 30, Department.TRAINING));
		empList.add(new Employee("Joe Smith", 42, Department.HUMAN_RESOURCES));
		
		Collections.sort();
	}

}
