		try(ObjectInputStream oos = new ObjectInputStream(
				new FileInputStream(filename))) {

			return readObject();

		} catch (FileNotFoundException e1) {
			// TODO Auto-generated catch block
			e1.printStackTrace();
		} catch (IOException e1) {
			// TODO Auto-generated catch block
			e1.printStackTrace();
		}
		
		return null;

	}
