package com.ex.day2;

import java.io.BufferedWriter;
import java.io.File;
import java.io.FileNotFoundException;
import java.io.FileWriter;
import java.io.IOException;
import java.util.Date;
import java.util.Scanner;

public class FileIO {
	
	// NOTE: while the package name is "ex.files.log" it is entered
	// in this string as "ex/files/log" because that is how the filename
	// is read
	static String filename = "src/com/ex/files/log.txt";
	
	public static void main(String[] args) {
		
		appendMessage("" + new Date());
		appendMessage("Good morning world! The stars say hello");
		System.out.println(retrieveMessage());
		
	}
	
	private static String retrieveMessage() {
		Scanner scan = null;
		
		try {
			
			scan = new Scanner(new File(filename));
			
		} catch (FileNotFoundException e) {
			e.printStackTrace();
		} finally {
			scan.close();
		}
	}

	static void appendMessage(String message) {
		
		// try with resources block
		try(BufferedWriter bw = new BufferedWriter(
				new FileWriter(filename, true))) {
			
			bw.write(message + "\n");
			
		} catch (IOException e) {
			e.printStackTrace();
		}
		
	}

}
