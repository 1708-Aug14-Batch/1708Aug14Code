<?xml version="1.0" encoding="UTF-8"?>
<web-app
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">
	
  <display-name>ServletExample</display-name>
  
  <context-param>
  	<param-name>contextParam</param-name>
  	<param-value>19</param-value>
  </context-param>
  
  <servlet>
  	<servlet-name>HelloServlet</servlet-name>
  	<servlet-class>com.revature.servlet.HelloServlet</servlet-class>
  </servlet>
  
  <servlet>
  	<servlet-name>ForwardRedirectServlet</servlet-name>
  	<servlet-class>com.revature.servlet.ForwardRedirectServlet</servlet-class>
  	<init-param>
  		<param-name>configParam</param-name>
  		<param-value>42</param-value>
  	</init-param>
  	<load-on-startup/>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>HelloServlet</servlet-name>
  	<url-pattern>/hello</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
  	<servlet-name>ForwardRedirectServlet</servlet-name>
  	<url-pattern>/forred</url-pattern>
  </servlet-mapping>
  
</web-app>