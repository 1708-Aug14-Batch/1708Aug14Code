/**
 * Learning JSON: JavaScript Object Notation. JSON is text, NOT a JS Object
 */

var myJSON = '{ "name" : "Connor", "age" : 100, "city" : "Fairfax" }';

var myObject = JSON.parse(myJSON);
console.log(myJSON);
console.log(myObject);

document.getElementById("demo").innerHTML = myObject.name;

function getTextFunction() {
	var xhr = new XMLHttpRequest();
	xhr.onrreadystatechange = function() {
		if (xhr.readyState == 4 && xhr.status == 200) {
			// Response is ready and request is successful
			document.getElementById("things").innerHTML = xhr.responseText;
		} 
		
	}
	
	xhr.open("GET", "getText", true);
}
