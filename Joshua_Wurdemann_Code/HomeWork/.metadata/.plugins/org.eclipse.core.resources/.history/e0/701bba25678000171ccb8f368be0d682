package question1;
/** sorts given intergers using bubble sort.
 * @author jwurd
 *@version Aug 14 2017
 */

public class BubbleSort {

	int numbers[] = {1,0,5,6,3,2,3,7,9,8,4};

}
public void bbubleSort(int[] numbers){
	boolean swap = true;
	int j = 0;
	int temp;

	while ( swap){
		swap = false;
		j++;

		for(int i = 0; i < numbers.length - j; i++){
			if (numbers[i] > numbers[i+1]) {
				temp = numbers[i];
				numbers[i] = numbers[i+1];
				numbers[i+1] = temp;
				swap = true;
			}
		}
	}
}
}